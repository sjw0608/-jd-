

.addAddress {
  border-top: 1px solid #f5f5f5;
  font-size: 28rpx;
  color: #666;
}

.addAddress>view {
  padding: 0 30rpx;
  border-bottom: 1px solid #f0eff5;
  box-sizing: border-box;
}

.addAddress>view:last-child {
  border-bottom: none;
}

.weui-label {
  height: 90rpx;
  width: 140rpx;
  min-height: 90rpx;
  line-height: 90rpx;
  color: #000;
}

.weui-input {
  height: 90rpx;
  min-height: 90rpx;
  line-height: 90rpx;
  text-align: left;
}

.btn-recharge {
  margin: 90rpx 30rpx 0 30rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 12rpx;
  font-size: 30rpx;
  background-color: #e41436;
  color: #fff;
  margin-top: 50rpx;
}